    <SeekBar android:id="@id/playProgressControlBar" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    <RelativeLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <ImageButton android:id="@id/playsoundStart" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/btn_start" android:layout_alignParentLeft="true" android:contentDescription="启动播放" />
