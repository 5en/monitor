    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
        <ImageButton android:id="@id/playsoundCancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/btn_play_cancel" android:layout_centerInParent="true" android:contentDescription="取消" />
